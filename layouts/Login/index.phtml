<div class="popupbox white" id="pblogin" role="alert" data-attr="glued">
    <div class="popupbox-container lg">
        <h2>Welcome User!</h2>
        <p></p>
        <form id="FL" action="/Login">
            <input name="email" class="field" type="text" placeholder="E-MAIL">
            <input name="password" class="field" type="password" placeholder="PASSWORD">
        </form>
        <ul class="lg-buttons inactive" style="padding-left: 0;">
            <li><a id="btnLogin">Log In</a></li>
        </ul>
    </div>
</div>
