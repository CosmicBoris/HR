<script src="<?=@Config::JAVAScripts_DIR?>md5.js"></script>
<script>
    $(document).ready(function(){
        setTimeout(function(){
            $('#pblogin').addClass('open');
        }, 300);
    });
    $(document).keyup(function(event) {
        if(event.which=='13') {
            Login();
        }
    });
    $( ":input" ).keyup(function( event ) {
        var l = document.getElementsByName("email")[0].value;
        var p = document.getElementsByName("password")[0].value;
        var btn = document.getElementsByClassName("lg-buttons")[0];
        if(l != '' && p != ''){
            RemoveClass(btn, "inactive");
        } else
            AddClass(btn, "inactive");
    });
</script>